<view class="modify"><image class="bg" src="http://qp9mr1fhs.hn-bkt.clouddn.com/img/my-bg.jpg"></image><view class="information"><view class="text">{{company==0?'个人信息编辑':'请完善个人资料'}}</view><view class="content"><view class="img"><view class="information_text">我的头像</view><view class="imgbox"><image style="width:130rpx;height:130rpx;background-color:white;" src="{{user_image}}" data-event-opts="{{[['tap',[['handleChooseImg',['$event']]]]]}}" onTap="__e"></image></view></view><block a:if="{{company!=0}}"><view class="name"><view class="information_text">公司名称</view><text class="information_name">{{company}}</text></view></block><view class="name"><view class="information_text">我的昵称</view><input class="information_name" placeholder="请输入您的昵称" maxlength="8" data-event-opts="{{[['focus',[['onHeight',['$event']]]],['blur',[['noInput',['$event']]]],['input',[['__set_model',['','username','$event',[]]]]]]}}" value="{{username}}" onFocus="__e" onBlur="__e" onInput="__e"/></view><view class="phone" style="{{(yzm==true?'border-bottom: 1rpx solid #f1f1f1;margin-bottom: 0;':'')}}"><view class="information_text">手机号</view><input class="information_phone" type="number" placeholder="请输入您的手机号" maxlength="11" data-event-opts="{{[['focus',[['onInput',['$event']]]],['blur',[['noInput',['$event']]]],['input',[['__set_model',['','phone','$event',[]]]]]]}}" value="{{phone}}" onFocus="__e" onBlur="__e" onInput="__e"/></view><block a:if="{{yzm==true}}"><view class="code"><view class="code_text">验证码</view><input class="information_code" placeholder="请输入验证码" maxlength="4" data-event-opts="{{[['focus',[['onHeight',['$event']]]],['blur',[['noInput',['$event']]]],['input',[['__set_model',['','code','$event',[]]]]]]}}" value="{{code}}" onFocus="__e" onBlur="__e" onInput="__e"/><view class="send_code" style="{{(!timer?'':'background:#cccccc')}}" type="“default”" disabled="{{!show}}" data-event-opts="{{[['tap',[['send_Code',['$event']]]]]}}" onTap="__e">{{!timer?'发送验证码':count+'s'}}</view></view></block></view></view><view class="btn"><view data-event-opts="{{[['tap',[['back',['$event']]]]]}}" class="back" onTap="__e">返回</view><view data-event-opts="{{[['tap',[['jump',['$event']]]]]}}" class="jump" onTap="__e">{{company==0?'提交':'确定'}}</view></view><bottom-bar style="{{(fu==true?'':{top:bottomBarTop})}}" vue-id="b7f248f0-1" onVueInit="__l"></bottom-bar></view>