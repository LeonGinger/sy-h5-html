
.nolist{
	display: none;
}
page{
	background-color: #f7f7f7;
}
._ul{
	height: 100rpx;
	width: 80%;
	margin: auto;
	margin-top: -30rpx;
}
._li{
	width: 50%;
	display: inline-block;
	height: 80rpx;
	font-size: 35rpx;
	line-height: 100rpx;
	text-align: center;
	margin-left: -20rpx;
}
@-webkit-keyframes myfirst
{
from {width: 0rpx;}
to {display: block;}
}
@keyframes myfirst
{
from {width: 0rpx;}
to {display: block;}
}
._li .on{
	width: 130rpx;
	height: 12rpx;
	background-color: #0ABB9A;
	margin: auto;
	margin-top:-10rpx;
	-webkit-border-radius: 30rpx;
	        border-radius: 30rpx;
	-webkit-animation:myfirst 0.2s linear;
	        animation:myfirst 0.2s linear;
}
.spimg{
	width: 170rpx;
	height: 170rpx;
	-webkit-border-radius: 20rpx;
	        border-radius: 20rpx;
	overflow: hidden;
	-webkit-box-shadow: 0 0 12rpx #C0C4CC;
	        box-shadow: 0 0 12rpx #C0C4CC;
}
.listname{
	position: absolute;
	left: 34%;
	font-size: 30rpx;
	font-weight: bold;
	top: 15%;
}
.listtime{
	position: absolute;
	left: 34%;
	font-size: 30rpx;
	top: 70%;
}
.listgg{
	position: absolute;
	left: 34%;
	font-size: 30rpx;
	top: 43%;
}
.spzt{
	position: absolute;
	width: 130rpx;
	height: 50rpx;
	right: 5%;
	top: 30%;
	-webkit-transform:rotate(-10deg);
	        transform:rotate(-10deg);
}

