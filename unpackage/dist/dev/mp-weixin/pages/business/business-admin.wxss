
.inlist {
	margin-top: 250rpx;
}
.nolist {
	display: none;
}
.add{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.add_img{
	width: 35rpx;
	height: 35rpx;
}
.utitlebox{
	margin-bottom: 10rpx;
}
.atext {
	font-size: 30rpx;
	font-weight: bold;
	color: #000000;
	position: absolute;
	margin-top: -2rpx;
	left: 8%;
}
.dtext ._span {
	color: #0ABB9A;
}
.item {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	padding: 20rpx;
}
.item image {
	width: 200rpx;
	height: 200rpx;
	margin-right: 20rpx;
	-webkit-border-radius: 20rpx;
	        border-radius: 20rpx;
	-webkit-box-shadow: 0 0 12rpx #C0C4CC;
	        box-shadow: 0 0 12rpx #C0C4CC;
}
.title {
	text-align: left;
	font-size: 28rpx;
	color: $u-content-color;
	margin-top: 20rpx;
}
.title-wrap {
	position: relative;
	width: 360rpx;
	height: 170rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	font-size: 28rpx;
	color: #424242;
	font-size: 30rpx;
}
.title-wrap text {
	position: absolute;
}
.name {
	top: 3%;
	font-weight: bold;
}
.ry{
	top: 55%;
}
.dh{
	top: 90%;
}
.ts {
	margin-left: 20rpx;
	font-size: 25rpx;
	color: gray;
	padding-top: 10rpx;
}

