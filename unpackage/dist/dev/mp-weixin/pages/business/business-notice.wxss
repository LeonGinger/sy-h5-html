.notice .bg {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: -1;
}
.notice .content {
  width: 90%;
  background-color: #FFFFFF;
  -webkit-border-radius: 50rpx;
          border-radius: 50rpx;
  margin: 60rpx auto;
  padding: 30rpx 0rpx;
  -webkit-box-shadow: 0 0 12rpx #C0C4CC;
          box-shadow: 0 0 12rpx #C0C4CC;
}
.notice .content .ts {
  font-size: 22rpx;
  margin: 15rpx;
  color: #c2c2c2;
}
.notice .content .text {
  height: 77%;
  width: 90%;
  margin: 30rpx 40rpx;
  text-indent: 2em;
}
.notice .content .text ._p {
  margin-bottom: 40rpx;
}
.notice .operation {
  padding: 0 40rpx;
}
.notice .operation .agree {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.notice .operation .agree .radio {
  width: 45rpx;
  height: 45rpx;
}
.notice .operation .agree .explain {
  padding: 0 20rpx;
  font-size: 32rpx;
  color: #0abb9a;
}
.notice .operation .text {
  width: 100%;
  font-size: 20rpx;
  padding: 15rpx 0;
  color: #C0C4CC;
  text-indent: 0;
  margin: 0;
