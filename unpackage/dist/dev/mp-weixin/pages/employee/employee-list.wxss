
.none{
	display: none;
}
.utitle{
	padding-bottom: 20rpx;
}
.tips{
	color:  gray;
	margin-left: 20rpx;
	font-size: 25rpx;
}
.item {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	padding: 20rpx;
}
.title-wrap{
	width: 400rpx;
	height: 120rpx;
	position: relative;
}
.title {
	text-align: left;
	font-size: 28rpx;
	color: $u-content-color;
	margin-top: 20rpx;
}
.imgbox{
	background-color: white;
	width: 130rpx;
	height: 130rpx;
	-webkit-border-radius: 50%;
	        border-radius: 50%;
	border: 6rpx white solid;
	-webkit-box-shadow: 0 0 12rpx #C0C4CC;
	        box-shadow: 0 0 12rpx #C0C4CC;
	overflow: hidden;
}
.imgbox image{
	width: 130rpx;
	height: 130rpx;
}
.name{
	position: absolute;
	top: 18%;
	font-weight: bold;
	font-size: 28rpx;
	left: 4%;
}
.number{
	position: absolute;
	top: 65%;
	font-weight: bold;
	font-size:28rpx;
	left: 4%;
}
.ewmbox{
	height: 410rpx;
	background-color: white;
	width: 400rpx;
	position: fixed;
	top: 30%;
	left: 23%;
	-webkit-border-radius: 30rpx;
	        border-radius: 30rpx;
	position: relative;
}
.ewmtitle{
	position: absolute;
	left: 30%;
	top: 5%;
	font-weight: bold;
}
.ewm{
	height: 300rpx;
	width: 300rpx;
	position: absolute;
	left: 13%;
	top: 18%;
}
.ewm image{
	height: 300rpx;
	width: 300rpx;
}
.qx{
	position: absolute;
	left: 50%;
	top: 110%;
	width: 60rpx;
	height: 60rpx;
	-webkit-transform: translate(-50%,0);
	        transform: translate(-50%,0);
}


