.wrapper {
  position: relative;
}
.wrapper .bg {
  width: 100%;
  z-index: -1;
  position: absolute;
  top: 0;
  left: 0;
  -webkit-animation: mybg 0.8s linear;
          animation: mybg 0.8s linear;
}
@-webkit-keyframes mybg {
0% {
    opacity: 0;
}
50% {
    opacity: 0;
}
100% {
    opacity: 1;
}
}
@keyframes mybg {
0% {
    opacity: 0;
}
50% {
    opacity: 0;
}
100% {
    opacity: 1;
}
}
